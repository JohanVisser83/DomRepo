        formdata.append('Mobile', mobileno);

        $.ajax({
            type: "POST",
            url: '/CommunitySignUp/SendOTPOnMobile',
            cache: false,
            contentType: false,
            processData: false,
            data: formdata,
            dataType: "json",
            success: function (response) {
                if (response.success == true) {
                   $("#Verifyotp-popup").modal('show');
                }
            },
            error: function (response) {
            }
        });
    }




