@model CircularWeb.Models.LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Basic Page Needs
       ================================================== -->
    <meta charset="utf-8">
    <link rel="icon" href="~/images/circular_update1.png">
    <title>Community Central - Circular</title>

    <!-- Mobile Specific Metas
       ================================================== -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <!-- CSS
       ================================================== -->
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/jquery-ui.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>

<body>
    <div class="login tab-box">
        <div class="container-fluid">
            <div class="row">

                <div class="col-lg-6 col-md-12  bg-color ">
                    <div class="login-inner-form">
                        <div class="details d-flex align-content-between flex-column">

                            <div class="logo mb-auto">
                                <a href="/">
                                 @*   <img src="~/images/circular_update.png" alt="logo" >*@
                                    <a href="http://www.circularapp.io/" target="_blank"http://www.circularapp.io/ ><img src="~/images/circular_update.png" alt="logo"></a>
                                </a>
                            </div>
                            <div class="logo-area ">
                                <div class="login-header">
                                    <h2>Community Central</h2>
                                    <p>The nexus of community leadership. Here, administrators unite, blending expertise and passion to craft their communities with a touch of magic. It's more than management – it's about realising visions and sparking magic. </p>
                                </div>
                                <form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                                     @*<label class="pl-4">Email address<sup><a href="" class="pl-1" data-toggle="modal" data-target="#info-otp"><img src="~/images/Information-Circle.png"></a></sup></label>*@
                                    <div class="row mb-1">
                                       <div class="col-lg-8 col-md-8 pr-2">
                                            
                                        
                                       @* <label>Email address</label>*@
                                       @* <input type="hidden" id="timezoneName" name="timezoneName" />*@
                                       
                                       
                                        <div class="input-group  login-field">
                                            <div class="input-group-prepend">
                                            <span class="input-group-text pr-2" id="basic-addon1"><img src="~/images/Input-Left-Side-Base.png" class="img-fluid"></span>
                                            </div>
                                                <input type="hidden" class="form-control" value="@TempData["UserName"]">
                                            <input type="text" class="form-control" name="username" id="username"  aria-label="Username" aria-describedby="basic-addon1" placeholder="Enter your email">
                                              
                                        </div>
                                       
                                  
                                       </div>
                                      <div class="col-lg-4 col-md-4 p-lg-0 p-md-0">
                                        <button id="login" class="btn-md btn-theme  loginbtn btn-rounded">Request OTP </button>
                                      </div>
                                    </div>
                                    <div class=" mt-2">
                                       <a class="text-gray " data-toggle="modal"  data-target="#info-otp">Why do I need to receive this email?</a>
                                   </div>
                                    <div class="form-group ">
                                        @if (ViewBag.ErrorMessage != null)
                                        {
                                            <div id="ErrorMessageBox" class="alert alert-danger col-lg-7 col-md-7">
                                                @ViewBag.ErrorMessage
                                            </div>
                                        }
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 ">
                    <div class="login-right-area p-0">
                        <img src="~/images/login-bg.png" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade modal-add-bx modal-sm-bx" id="info-otp" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog  modal-dialog-centered">
            <div class="modal-content border-bottom-radius-0">

                <div class="modal-body ">
                    <div class="new-message ">
                        <div class="past-leave-box">
                            <h5>Why do I need to recieve this email? </h5>
                            <p>
                                You are receiving this email containing a one-time password (OTP) as an added layer of security to verify your identity and protect your account. The OTP ensures that only authorized users can access sensitive information or perform critical actions. By requiring this verification step, we enhance the security of your account and prevent unauthorized access. If you have any concerns or need assistance, please do not hesitate to contact our support team.
                            </p>
                            <button type="button" class="btn btn-outline-success btn-h-50 btn-rounded" data-dismiss="modal">I understand and agree</button>
                        </div>

                    </div>

                </div>

            </div>

        </div>
    </div>

    <!-- Javascript Files
       ================================================== -->
    <script type="text/javascript" src="js/jquery.min.js"></script>
    <!-- initialize jQuery Library -->
    <!-- <script type="text/javascript" src="js/jquery.js"></script> -->
    <!-- Bootstrap jQuery -->
    <script type="text/javascript" src="js/bootstrap.min.js"></script>
    <!-- Template custom -->
    <!-- <script type="text/javascript" src="js/custom.js"></script> -->
    <script src="js/jquery-ui.js" type="text/javascript"></script>
    <!-- ==== security popup==== -->
    <script language="javascript">
        function checkClientTimeZone() {
            // Set the client time zone
            var dt = new Date();
            SetCookieCrumb("ClientDateTime", dt.toString());

            var tz = -dt.getTimezoneOffset();
            SetCookieCrumb("ClientTimeZone", tz.toString());

            // Expire in one year
            dt.setYear(dt.getYear() + 1);
            SetCookieCrumb("expires", dt.toUTCString());
        }

        
    </script>
    <script>
        $(document).onload(function () {
            checkClientTimeZone();
        })
    </script>
</body>
</html>



