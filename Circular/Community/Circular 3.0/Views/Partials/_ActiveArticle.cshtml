                                <label>Who wrote this article?</label>
                                <input type="text" class="form-control " placeholder="" value="@Model.lstActiveNewsFeedDetails.WroteArticle" id="lblWroteArticle1" readonly>

                            </div>
                        </div>
                       <div class="col-md-6">
                            <div class="form-group">
                                <label>Who received this article?</label>
                                <input type="text" class="form-control " placeholder="" value="@Model.lstActiveNewsFeedDetails.GroupName" readonly>

                            </div>
                        </div>

                    </div>
                </div>
