                <div class="col-md-12">
                    <div class="form-group">
                        <label>Newfeeds Cover Images/Videos</label>
                        <div class="row">
                        @foreach (var item in Model.lstActiveNewsFeedDetails.ArticleMedia)
                        { 
                           
                                @if (item.MediaType == "Image")
                                {
                                    <div class="col-md-3 mb-2 message-img-size">
                                        <img src="@item.Media" />
                                        </div>
                                 
                                }
